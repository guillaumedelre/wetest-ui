{% extends '@App/Layout/default.html.twig' %}

{% block content_header %}
    403
    <small>Error Page</small>
{% endblock %}

{% block main_content %}
    <div class="error-page">
        <h2 class="headline text-yellow"> 404</h2>

        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> Oops! Page not found.</h3>

            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                <p>
                    We could not find the page you were looking for.
                    Meanwhile, you may <a href="{{ url('app_dashboard_index') }}">return to dashboard</a> or try using the search form.
                </p>
            {% else %}
                <p>
                    We could not find the page you were looking for.
                    Meanwhile, you may <a href="{{ url('app_default_index') }}">return to dashboard</a> or try using the search form.
                </p>
            {% endif %}

            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search">

                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-warning btn-flat"><i
                                    class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <!-- /.input-group -->
            </form>
        </div>
        <!-- /.error-content -->
    </div>
{% endblock %}
