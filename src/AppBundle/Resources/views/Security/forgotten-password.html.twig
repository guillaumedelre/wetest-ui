{% extends '@App/Layout/offline.html.twig' %}

{% block page_title %}WetestUi | Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/skins/all.css">
{% endblock %}

{% block body_class %}hold-transition register-page{% endblock %}

{% block body_content %}
    <div class="register-box">
        <div class="register-logo">
            <a href="{{ url('app_default_index') }}"><b>Wetest</b>UI</a>
        </div>

        {% if error %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <h4><i class="icon fa fa-ban"></i> An error occured!</h4>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="register-box-body">
            <p class="login-box-msg">Send me a link to re-new my password</p>

            <form action="" method="post">
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Email">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8"></div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Link me</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <hr>

            <div class="row">
                <div class="col-md-12">
                    <a href="{{ url('security_login') }}" class="btn btn-block btn-default">I already have an account</a>
                </div>
            </div>
        </div>
        <!-- /.form-box -->
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
{% endblock %}
