{% extends '@App/Layout/offline.html.twig' %}

{% block page_title %}WetestUi | Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/skins/all.css">
{% endblock %}

{% block body_class %}hold-transition login-page{% endblock %}

{% block body_content %}
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ url('app_default_index') }}"><b>Wetest</b>UI</a>
        </div>

        {% if error %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <h4><i class="icon fa fa-ban"></i> An error occured!</h4>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="{{ url('security_login') }}" method="post">
                <div class="form-group has-feedback">
                    <input type="email" name="_username" class="form-control" placeholder="Email">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" name="_password"  class="form-control" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <hr>

            <div class="row">
                <div class="col-xs-6 text-left">
                    <a href="{{ url ('security_forgotten_password') }}" class="btn btn-default btn-block">I forgot my password</a>
                </div>
                <div class="col-xs-6 text-right">
                    <a href="{{ url('security_register') }}" class="btn btn-default btn-block">Register</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iCheck/1.0.2/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
{% endblock %}
