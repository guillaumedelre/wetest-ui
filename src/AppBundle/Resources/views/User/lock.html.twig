{% extends '@App/Layout/offline.html.twig' %}

{% block page_title %}WetestUi | Lockscreen{% endblock %}

{% block body_class %}hold-transition lockscreen{% endblock %}

{% block body_content %}
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            <a href="{{ url('app_default_index') }}"><b>Wetest</b>UI</a>
        </div>
        <!-- User name -->
        <div class="lockscreen-name">{{ app.user.username }}</div>

        <!-- START LOCK SCREEN ITEM -->
        <div class="lockscreen-item">
            <!-- lockscreen image -->
            <div class="lockscreen-image">
                <img src="" data-src="holder.js/70x70" alt="User Image">
            </div>
            <!-- /.lockscreen-image -->

            <!-- lockscreen credentials (contains the form) -->
            <form class="lockscreen-credentials" action="{{ url('security_login') }}" method="post">
                <div class="input-group">
                    <input type="hidden" name="_username" class="form-control" value="{{ app.user.username }}">
                    <input type="password" name="_password"  class="form-control" placeholder="Password">

                    <div class="input-group-btn">
                        <button type="submit" class="btn"><i class="fa fa-arrow-right text-muted"></i></button>
                    </div>
                </div>
            </form>
            <!-- /.lockscreen credentials -->

        </div>
        <!-- /.lockscreen-item -->
        <div class="help-block text-center">
            Enter your password to retrieve your session
        </div>
        <div class="text-center">
            <a href="{{ url('logout') }}">Or sign in as a different user</a>
        </div>
    </div>
{% endblock %}